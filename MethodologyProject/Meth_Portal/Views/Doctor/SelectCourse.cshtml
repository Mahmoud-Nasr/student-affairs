
@{
    ViewBag.Title = "SelectCourse";
}

<div style="padding:40px">
    @using (Html.BeginForm("ExportClientsListToCSV", "Doctor"))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>RegisteCourse</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.Label("value", "CourseID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("value", new SelectList((List<Meth_Data.Database.Course>)ViewBag.CourseList, "Id", "CourseName"), new { @class = "form-control" })
                    @Html.ValidationMessage("value", "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Download Csv File" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Back to Dashboard", "Index")
    </div>
</div>